{
    "extends": ["stylelint-config-standard-scss", "stylelint-config-recommended"],
    "rules": {
        "at-rule-no-unknown": [true,
            { "ignoreAtRules": ["extends"] }
        ],
        "block-no-empty": null,
        "unit-allowed-list": ["em", "rem", "s", "px", "dvi", "dvb", "cqi", "cqb"]
    }
}
