{
    "extends": ["@antfu/eslint-config"],
    "languageOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "linterOptions": {
        "reportUnusedDisableDirectives": true
    },
    "rules": {
        "semi": ["warn", "never"],
        "quotes": ["warn", "single", {"allowTemplateLiterals": true}],
        "indent": ["warn", 4, {"SwitchCase": 1, "flatTernaryExpressions": true}],
        "brace-style": ["warn", "stroustrup", {"allowSingleLine": true}],
        "nonblock-statement-body-position": ["warn", "any"],
        "curly": ["warn", "all"],
        "comma-dangle": ["warn", "always-multiline"],
        "object-curly-spacing": ["warn", "always"],
        "array-bracket-spacing": ["warn", "never"],
        "space-before-blocks": ["warn", "always"],
        "keyword-spacing": ["warn", {"before": true, "after": true}],
        "no-mixed-spaces-and-tabs": ["warn"],
        "padding-line-between-statements": [
            "warn",
            {"blankLine": "always", "prev": "directive", "next": "*"},
            {"blankLine": "always", "prev": ["if", "do", "while", "for", "switch"], "next": "*"},
            {"blankLine": "any", "prev": "if", "next": "if"}
        ]
    },
    "overrides": [
        {
            "files": ["**/*.json", "**/*.jsonc", "**/*.json5"],
            "plugins": ["jsonc"],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "jsonc/array-bracket-newline": ["error", "never"],
                "jsonc/array-element-newline": ["error", "never"],
                "jsonc/comma-dangle": ["error", "never"],
                "jsonc/sort-keys": "off"
            }
        }
    ]
}
