{
    // CSS Var Hover
    "cssVarHover.watchedFiles": [
        "apps/OS.u2re.space/src/$vue$/settings/Fields/Appearance.vue"
    ],
    "cssVarHover.ignoredFiles": [
        "apps/OS.u2re.space/src/$blue$/settings/Fields.ts"
    ],

    // Explorer & IO
    "explorer.confirmPasteNative": false,
    "ipynb.pasteImagesAsAttachments.enabled": false,
    "files.autoSaveDelay": 1000,
    "files.autoSave": "onFocusChange",
    "markdown.copyFiles.overwriteBehavior": "overwrite",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "files.associations": {
        "*.css": "scss"
    },

    // Editor General
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 480,
    "editor.autoIndent": "full",
    "editor.formatOnSave": false,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.defaultFormatter": "vscode.markdown-language-features",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "editor.guides.highlightActiveIndentation": "always",
    "editor.occurrencesHighlight": "multiFile",
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "inline",
    "editor.quickSuggestionsDelay": 10,
    "editor.suggestOnTriggerCharacters": false,
    "editor.suggest.selectionMode": "never",
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.suggest.showSnippets": true,
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.inlineSuggest.edits.showCollapsed": false,
    "editor.inlineSuggest.showToolbar": "never",
    "editor.bracketPairColorization.enabled": true,
    "editor.linkedEditing": true,

    // Workbench
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.experimental.share.enabled": true,
    "workbench.list.smoothScrolling": true,

    // Prettier Integration
    "prettier.resolveGlobalModules": true,
    "prettier.withNodeModules": true,
    "prettier.requireConfig": true,
    "prettier.printWidth": 480,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "prettier.semi": true,
    "prettier.singleQuote": false,
    "prettier.trailingComma": "none",

    // ESLint Integration
    "eslint.useESLintClass": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "vue",
        "json",
        "jsonc"
    ],

    // Language Specific
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    // TypeScript / JavaScript Config
    "javascript.preferences.importModuleSpecifier": "shortest",
    "typescript.preferences.importModuleSpecifier": "shortest",
    "js/ts.implicitProjectConfig.target": "ESNext",
    "js/ts.implicitProjectConfig.experimentalDecorators": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",

    // Cursor & AI
    "cursor.cpp.enablePartialAccepts": true,
    "cursor.composer.shouldAllowCustomModes": true,
    "cursor.composer.usageSummaryDisplay": "always",
    "cursor.diffs.useCharacterLevelDiffs": true,
    "cursor.general.enableShadowWorkspace": true,
    "cursor.semanticSearch.includeCommitsWithFiles": true,
    "cursor.windowSwitcher.sidebarHoverCollapsed": true,

    // Extensions
    "compile-hero.disable-compile-files-on-did-save-code": true,
    "versionlens.suggestions.showPrereleasesOnStartup": true,
    "versionlens.suggestions.showOnStartup": true,
    "markdown.occurrencesHighlight.enabled": true,
    "somesass.scss.highlights.enabled": true,
    "somesass.css.highlights.enabled": true,
    "emmet.showSuggestionsAsSnippets": true,
    "errorLens.delayMode": "debounce",
    "terminal.integrated.windowsUseConptyDll": true,
    "cSpell.words": [
        "veela"
    ],
    "editor.formatOnPaste": false,
    "editor.formatOnType": true,
    "javascript.preferences.importModuleSpecifierEnding": "minimal",
    "javascript.updateImportsOnPaste.enabled": true,
    "typescript.preferences.importModuleSpecifierEnding": "minimal",
    "typescript.preferences.includePackageJsonAutoImports": "on",
    "typescript.updateImportsOnPaste.enabled": true,
    "notebook.defaultFormatter": "vscode.markdown-language-features",
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "stylelint.config": {
        "extends": ["stylelint-config-standard-scss"],
        "plugins": [
            "stylelint-plugin-logical-css",
            "stylelint-scss"
        ],
        "customSyntax": "postcss-scss",
        "rules": {
            "at-rule-no-unknown": null,
            "scss/at-rule-no-unknown": [true, {
                "ignoreAtRules": [
                    "function",
                    "mixin",
                    "include",
                    "extend",
                    "use",
                    "forward",
                    "return",
                    "if",
                    "else",
                    "for",
                    "each",
                    "while",
                    "warn",
                    "debug",
                    "error",
                    "layer",
                    "property"
                ],
                "severity": "warning"
            }],
            "function-no-unknown": null,
            "scss/function-no-unknown": [true, {
                "ignoreFunctions": [
                    "color-mix",
                    "oklch",
                    "oklab",
                    "style"
                ],
                "severity": "warning"
            }],
            "selector-type-no-unknown": null,
            "block-no-empty": null,
            "no-descending-specificity": null,
            "selector-class-pattern": null,
            "color-function-notation": ["modern", {"severity": "warning"}],
            "alpha-value-notation": ["percentage", {"severity": "warning"}],
            "custom-property-empty-line-before": null,
            "declaration-empty-line-before": null,
            "unit-allowed-list": [
                "em", "rem", "s", "ms", "px", "%",
                "dvi", "dvb", "dvh", "dvw", "svh", "svw",
                "lvh", "lvw", "cqi", "cqb", "cqw", "cqh",
                "deg", "rad", "grad", "turn", "fr"
            ],
            "scss/at-extend-no-missing-placeholder": null,
            "scss/selector-no-redundant-nesting-selector": null,
            "scss/selector-no-union-class-name": null,
            "scss/no-global-function-names": null,
            "scss/dollar-variable-pattern": null,
            "scss/dollar-variable-empty-line-before": null,
            "plugin/use-logical-properties-and-values": [true, {"severity": "warning"}],
            "plugin/use-logical-units": [true, {"severity": "warning"}],
            "plugin/no-unsupported-browser-features": [true, {"severity": "warning"}],
            "max-nesting-depth": 6,
            "selector-max-compound-selectors": 6,
            "declaration-block-no-duplicate-properties": true
        }
    },
    "stylelint.snippet": [
        "css",
        "postcss",
        "scss"
    ],
    "stylelint.validate": [
        "css",
        "postcss",
        "scss"
    ],
    "stylelint.ignoreDisables": true,
    "stylelint.rules.customizations": [
        {"rule": "at-rule-no-unknown", "severity": "warn"},
        {"rule": "function-no-unknown", "severity": "warn"},
        {"rule": "selector-type-no-unknown", "severity": "warn"},
        {"rule": "block-no-empty", "severity": "warn"},
        {"rule": "no-descending-specificity", "severity": "warn"},
        {"rule": "selector-class-pattern", "severity": "warn"},
        {"rule": "color-function-notation", "severity": "warn"},
        {"rule": "alpha-value-notation", "severity": "warn"},
        {"rule": "custom-property-empty-line-before", "severity": "warn"},
        {"rule": "declaration-empty-line-before", "severity": "warn"},
        {"rule": "unit-allowed-list", "severity": "warn"},
        {"rule": "scss/at-extend-no-missing-placeholder", "severity": "warn"},
        {"rule": "scss/selector-no-redundant-nesting-selector", "severity": "warn"},
        {"rule": "scss/selector-no-union-class-name", "severity": "warn"},
        {"rule": "scss/no-global-function-names", "severity": "warn"},
        {"rule": "scss/dollar-variable-pattern", "severity": "warn"},
        {"rule": "scss/dollar-variable-empty-line-before", "severity": "warn"},
        {"rule": "plugin/use-logical-properties-and-values", "severity": "warn"},
        {"rule": "plugin/use-logical-units", "severity": "warn"},
        {"rule": "plugin/no-unsupported-browser-features", "severity": "warn"},
        {"rule": "max-nesting-depth", "severity": "warn"},
        {"rule": "selector-max-compound-selectors", "severity": "warn"},
        {"rule": "declaration-block-no-duplicate-properties", "severity": "warn"}
    ],
    "editor.fontFamily": "'Monaspace Neon Var', 'Google Sans Code', 'Consolas', monospace",
    "terminal.integrated.fontFamily": "'Monaspace Neon Var', 'Google Sans Code', 'Consolas', monospace",
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 1.6
}
