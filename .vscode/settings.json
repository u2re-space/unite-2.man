{
    // CSS Var Hover
    "cssVarHover.watchedFiles": [
        "apps/OS.u2re.space/src/$vue$/settings/Fields/Appearance.vue"
    ],
    "cssVarHover.ignoredFiles": [
        "apps/OS.u2re.space/src/$blue$/settings/Fields.ts"
    ],

    // Explorer & IO
    "explorer.confirmPasteNative": false,
    "ipynb.pasteImagesAsAttachments.enabled": false,
    "files.autoSaveDelay": 1000,
    "files.autoSave": "onFocusChange",
    "markdown.copyFiles.overwriteBehavior": "overwrite",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "files.associations": {
        "*.css": "scss"
    },

    // Editor General
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 480,
    "editor.autoIndent": "full",
    "editor.formatOnSave": false,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.defaultFormatter": "vscode.markdown-language-features",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "editor.guides.highlightActiveIndentation": "always",
    "editor.occurrencesHighlight": "multiFile",
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "inline",
    "editor.quickSuggestionsDelay": 10,
    "editor.suggestOnTriggerCharacters": false,
    "editor.suggest.selectionMode": "never",
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.suggest.showSnippets": true,
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.inlineSuggest.edits.showCollapsed": false,
    "editor.inlineSuggest.showToolbar": "never",
    "editor.bracketPairColorization.enabled": true,
    "editor.linkedEditing": true,

    // Workbench
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.experimental.share.enabled": true,
    "workbench.list.smoothScrolling": true,

    // Prettier Integration
    "prettier.resolveGlobalModules": true,
    "prettier.withNodeModules": true,
    "prettier.requireConfig": true,
    "prettier.printWidth": 480,
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "prettier.semi": true,
    "prettier.singleQuote": false,
    "prettier.trailingComma": "none",

    // ESLint Integration
    "eslint.useESLintClass": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "vue",
        "json",
        "jsonc"
    ],

    // Language Specific
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    // TypeScript / JavaScript Config
    "javascript.preferences.importModuleSpecifier": "shortest",
    "typescript.preferences.importModuleSpecifier": "shortest",
    "js/ts.implicitProjectConfig.target": "ESNext",
    "js/ts.implicitProjectConfig.experimentalDecorators": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",

    // Cursor & AI
    "cursor.cpp.enablePartialAccepts": true,
    "cursor.composer.shouldAllowCustomModes": true,
    "cursor.composer.usageSummaryDisplay": "always",
    "cursor.diffs.useCharacterLevelDiffs": true,
    "cursor.general.enableShadowWorkspace": true,
    "cursor.semanticSearch.includeCommitsWithFiles": true,
    "cursor.windowSwitcher.sidebarHoverCollapsed": true,

    // Extensions
    "compile-hero.disable-compile-files-on-did-save-code": true,
    "versionlens.suggestions.showPrereleasesOnStartup": true,
    "versionlens.suggestions.showOnStartup": true,
    "markdown.occurrencesHighlight.enabled": true,
    "somesass.scss.highlights.enabled": true,
    "somesass.css.highlights.enabled": true,
    "emmet.showSuggestionsAsSnippets": true,
    "errorLens.delayMode": "debounce",
    "terminal.integrated.windowsUseConptyDll": true,
    "cSpell.words": [
        "veela"
    ],
    "editor.formatOnPaste": false,
    "editor.formatOnType": true,
    "javascript.preferences.importModuleSpecifierEnding": "minimal",
    "javascript.updateImportsOnPaste.enabled": true,
    "typescript.preferences.importModuleSpecifierEnding": "minimal",
    "typescript.preferences.includePackageJsonAutoImports": "on",
    "typescript.updateImportsOnPaste.enabled": true,
    "notebook.defaultFormatter": "vscode.markdown-language-features",
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "stylelint.validate": [
        "css",
        "postcss",
        "scss"
    ],
    "stylelint.ignoreDisables": true,
    "stylelint.rules.customizations": [
        { "rule": "scss/at-rule-no-unknown", "severity": "warn" }
    ],
    // Use Stylelint extension v2.0.1+ to avoid "Converting circular structure to JSON" (Lexer/syntax) when linting SCSS
    "editor.fontFamily": "'Monaspace Neon Var', 'Google Sans Code', 'Consolas', monospace",
    "terminal.integrated.fontFamily": "'Monaspace Neon Var', 'Google Sans Code', 'Consolas', monospace",
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 1.6,
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.enable": true,
    "logicalProperties.ignoreLanguageIds": [
        "typescript",
        "javascript"
    ],
    "workbench.editor.wrapTabs": true
}
