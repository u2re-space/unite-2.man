{
    "include": ["./**/*.ts", "./index.ts", "../**/*.ts"],
    "exclude": ["../../dist/**/*", "../../externals/**/*"],
    "compilerOptions": {
        "outDir": "../../dist/",
        "paths": {
            "@phosphor-icons/core/assets/*": ["../../node_modules/@phosphor-icons/core/assets/*"],
            "fonts/*": ["../../fonts/*"],
            "fest/*": ["../*"],
            "fest/cdnImport": ["../cdnImport.mjs", "../../shared/fest/cdnImport.mjs"],
            "fest/dom": ["../dom/index.ts", "../../shared/fest/dom/index.ts"],
            "fest/lure": ["../lure/index.ts", "../../shared/fest/lure/index.ts"],
            "fest/object": ["../object/index.ts", "../../shared/fest/object/index.ts"],
            "fest/uniform": ["../uniform/index.ts", "../../shared/fest/uniform/index.ts"],
            "fest/theme": ["../theme/index.ts", "../../shared/fest/theme/index.ts"],
            "fest/fl-ui": ["./index.ts", "../../shared/fest/fl-ui/index.ts"],
            "fest/ui": ["./index.ts", "../../shared/fest/ui/index.ts"],
            "fest/polyfill/*": ["../polyfill/*", "../../shared/fest/polyfill/*"],
            "polyfill/*": ["../polyfill/*", "../../shared/polyfill/*"],
            "@design/*": ["./design/*", "../../shared/fest/fl-ui/design/*"],
            "@ui/*": ["./ui/*", "../../shared/fest/fl-ui/ui/*"],
            "@src/*": ["./*", "../../shared/fest/fl-ui/*"]
        },
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ESNext", "DOM", "WebWorker"],
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowArbitraryExtensions": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "noImplicitAny": false,
        "declaration": false,
        "noImplicitThis": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "typeRoots": ["plugins/global.d.ts"],
        "experimentalDecorators": true
    }
}
