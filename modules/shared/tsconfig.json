{
    "include": ["./fest/**/*.ts", "./test/**/*.ts"],
    "exclude": ["./dist/**/*", "./externals/**/*"],
    "compilerOptions": {
        "outDir": "./dist/",
        "paths": {
            "fonts/*": ["./fonts/*"],
            "fest/*": ["./fest/*"],
            "fest/cdnImport": ["../cdnImport.mjs"],
            "fest/dom": ["./fest/dom/index.ts"],
            "fest/lure": ["./fest/lure/index.ts"],
            "fest/fl-ui": ["./fest/fl-ui/index.ts"],
            "fest/object": ["./fest/object/index.ts"],
            "fest/uniform": ["./fest/uniform/index.ts"],
            "fest/theme": ["./fest/theme/index.ts"],
            "fest/core": ["./fest/core/index.ts"],
            "fest/polyfill/*": ["./fest/polyfill/*"],

            "fest/veela": ["./veela/index.ts"],
            "fest/veela/*": ["./veela/scss/*"],

            "fest/veela-runtime": ["./veela/scss/runtime/index.scss"],
            "fest/veela-runtime/*": ["./veela/scss/runtime/*"],

            "fest/veela-lib": ["./veela/scss/lib/index.scss"],
            "fest/veela-lib/*": ["./veela/scss/lib/*"],

            "fest/veela-mixins": ["./veela/scss/lib/mixins/index.scss"],
            "fest/veela-mixins/*": ["./veela/scss/lib/mixins/*"],

            "veela": ["./veela/index.ts"],
            "veela/*": ["./veela/scss/*"],

            "veela-runtime": ["./veela/scss/runtime/index.scss"],
            "veela-runtime/*": ["./veela/scss/runtime/*"],

            "veela-lib": ["./veela/scss/lib/index.scss"],
            "veela-lib/*": ["./veela/scss/lib/*"],

            "veela-mixins": ["./veela/scss/lib/mixins/index.scss"],
            "veela-mixins/*": ["./veela/scss/lib/mixins/*"],

            "polyfill/*": ["./fest/polyfill/*"],
            "@design/*": ["./fest/fl-ui/design/*"],
            "@ui/*": ["./fest/fl-ui/ui/*"]
        },
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ESNext", "DOM", "WebWorker"],
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowArbitraryExtensions": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "noImplicitAny": false,
        "declaration": false,
        "noImplicitThis": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "typeRoots": ["plugins/global.d.ts"],
        "experimentalDecorators": true
    }
}
